<Window x:Class="CloverBridge.UI.TransactionDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalle de TransacciÃ³n"
        Height="700"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#0f172a"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#667eea"/>
            <Setter Property="Margin" Value="0,15,0,10"/>
        </Style>

        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#94a3b8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,5,0,2"/>
        </Style>

        <Style x:Key="ValueText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#e2e8f0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1e293b" Padding="20" BorderBrush="#334155" BorderThickness="0,0,0,1">
            <Grid>
                <StackPanel>
                    <TextBlock Text="ðŸ“„ Detalle de TransacciÃ³n" 
                              FontSize="20" 
                              FontWeight="Bold"
                              Foreground="#e2e8f0"/>
                    <TextBlock x:Name="InvoiceNumberText"
                              Text="Factura #"
                              FontSize="14"
                              Foreground="#94a3b8"
                              Margin="0,5,0,0"/>
                </StackPanel>
                <Button Content="âœ•" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="30"
                        Height="30"
                        Background="Transparent"
                        Foreground="#94a3b8"
                        BorderThickness="0"
                        FontSize="18"
                        Cursor="Hand"
                        Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#334155"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                
                <!-- InformaciÃ³n General -->
                <TextBlock Text="ðŸ“‹ InformaciÃ³n General" Style="{StaticResource SectionHeader}"/>
                <Border Background="#1e293b" BorderBrush="#334155" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="ID de TransacciÃ³n:" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="TransactionIdText" Style="{StaticResource ValueText}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1">
                            <TextBlock Text="ID Externo:" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="ExternalIdText" Style="{StaticResource ValueText}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0">
                            <TextBlock Text="Estado:" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="StatusText" Style="{StaticResource ValueText}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1">
                            <TextBlock Text="Tipo:" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="TypeText" Style="{StaticResource ValueText}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0">
                            <TextBlock Text="Monto:" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="AmountText" Style="{StaticResource ValueText}" FontSize="16" Foreground="#10b981"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="1">
                            <TextBlock Text="Impuesto:" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="TaxText" Style="{StaticResource ValueText}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Grid.Column="0">
                            <TextBlock Text="Cliente:" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="CustomerNameText" Style="{StaticResource ValueText}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Grid.Column="1">
                            <TextBlock Text="Timestamp:" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="TimestampText" Style="{StaticResource ValueText}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2">
                            <TextBlock Text="Notas:" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="NotesText" Style="{StaticResource ValueText}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- InformaciÃ³n de Pago -->
                <TextBlock Text="ðŸ’³ InformaciÃ³n de Pago" Style="{StaticResource SectionHeader}"/>
                <Border x:Name="PaymentInfoBorder" Background="#1e293b" BorderBrush="#334155" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                    <Grid x:Name="PaymentInfoGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="Payment ID (Clover):" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="CloverPaymentIdText" Style="{StaticResource ValueText}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1">
                            <TextBlock Text="Order ID (Clover):" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="CloverOrderIdText" Style="{StaticResource ValueText}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0">
                            <TextBlock Text="Tarjeta:" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="CardInfoText" Style="{StaticResource ValueText}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1">
                            <TextBlock Text="CÃ³digo de AutorizaciÃ³n:" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="AuthCodeText" Style="{StaticResource ValueText}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0">
                            <TextBlock Text="Propina:" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="TipText" Style="{StaticResource ValueText}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="1">
                            <TextBlock Text="Monto Total:" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="TotalAmountText" Style="{StaticResource ValueText}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Grid.Column="0">
                            <TextBlock Text="NÃºmero de Recibo:" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="ReceiptNumberText" Style="{StaticResource ValueText}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Grid.Column="1">
                            <TextBlock Text="ComisiÃ³n:" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="ProcessingFeeText" Style="{StaticResource ValueText}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Error (si existe) -->
                <Border x:Name="ErrorBorder" Visibility="Collapsed" Background="#1e293b" BorderBrush="#ef4444" BorderThickness="2" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="âŒ Error" Style="{StaticResource SectionHeader}" Foreground="#ef4444"/>
                        <TextBlock x:Name="ErrorMessageText" Style="{StaticResource ValueText}" TextWrapping="Wrap" Foreground="#fca5a5"/>
                        <TextBlock x:Name="ErrorCodeText" Style="{StaticResource LabelText}" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Log de TransacciÃ³n -->
                <TextBlock Text="ðŸ“ Log de TransacciÃ³n" Style="{StaticResource SectionHeader}"/>
                <Border Background="#1e293b" BorderBrush="#334155" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                    <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="TransactionLogItems">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#0f172a" BorderBrush="#334155" BorderThickness="0,0,0,1" Padding="10,8" Margin="0,0,0,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="140"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" 
                                                      Foreground="#64748b" FontFamily="Consolas" FontSize="11"/>
                                            <TextBlock Grid.Column="1" Text="{Binding EventType}" 
                                                      Foreground="#8b5cf6" FontWeight="SemiBold" FontSize="11"/>
                                            <StackPanel Grid.Column="2">
                                                <TextBlock Text="{Binding Description}" 
                                                          Foreground="#e2e8f0" FontSize="12" TextWrapping="Wrap"/>
                                                <TextBlock Text="{Binding Details}" 
                                                          Foreground="#94a3b8" FontSize="10" Margin="0,2,0,0" TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <!-- Tiempos de Procesamiento -->
                <TextBlock Text="â±ï¸ Tiempos de Procesamiento" Style="{StaticResource SectionHeader}"/>
                <Border Background="#1e293b" BorderBrush="#334155" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Inicio del Proceso:" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="ProcessStartTimeText" Style="{StaticResource ValueText}"/>
                            <TextBlock Text="Enviado a Terminal:" Style="{StaticResource LabelText}" Margin="0,10,0,2"/>
                            <TextBlock x:Name="SentToTerminalTimeText" Style="{StaticResource ValueText}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Fin del Proceso:" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="ProcessEndTimeText" Style="{StaticResource ValueText}"/>
                            <TextBlock Text="DuraciÃ³n Total:" Style="{StaticResource LabelText}" Margin="0,10,0,2"/>
                            <TextBlock x:Name="DurationText" Style="{StaticResource ValueText}" Foreground="#667eea" FontSize="14"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- JSON Raw -->
                <TextBlock Text="ðŸ”§ JSON Completo" Style="{StaticResource SectionHeader}"/>
                <Border Background="#1e293b" BorderBrush="#334155" BorderThickness="1" CornerRadius="8" Padding="15">
                    <TextBox x:Name="JsonRawText"
                            IsReadOnly="True"
                            Background="Transparent"
                            Foreground="#94a3b8"
                            BorderThickness="0"
                            FontFamily="Consolas"
                            FontSize="11"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto"
                            MinHeight="150"
                            MaxHeight="300"/>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#1e293b" Padding="15" BorderBrush="#334155" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="ðŸ“‹ Copiar JSON"
                       Background="#667eea"
                       Foreground="White"
                       Padding="15,8"
                       BorderThickness="0"
                       Cursor="Hand"
                       FontSize="13"
                       FontWeight="SemiBold"
                       Margin="0,0,10,0"
                       Click="CopyJsonButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="Cerrar"
                       Background="#334155"
                       Foreground="White"
                       Padding="15,8"
                       BorderThickness="0"
                       Cursor="Hand"
                       FontSize="13"
                       FontWeight="SemiBold"
                       Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
