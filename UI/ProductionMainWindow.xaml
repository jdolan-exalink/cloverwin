<Window x:Class="CloverBridge.UI.ProductionMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CloverBridge - Control Panel"
        Height="720"
        Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#0f172a"
        MinWidth="1024"
        MinHeight="600"
        Closing="Window_Closing"
        StateChanged="Window_StateChanged">

    <Window.Resources>
        <!-- Estilos Modernos ProducciÃ³n -->
        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1e293b" Offset="0"/>
                        <GradientStop Color="#1e293b" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000" Direction="270" ShadowDepth="3" Opacity="0.3" BlurRadius="10"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MetricCard" TargetType="Border">
            <Setter Property="Background" Value="#1e293b"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#667eea" Offset="0"/>
                        <GradientStop Color="#764ba2" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#10b981"/>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#ef4444"/>
        </Style>

        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#f59e0b"/>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1e293b"/>
            <Setter Property="Foreground" Value="#e2e8f0"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Premium -->
        <Border Grid.Row="0" Padding="12,10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#667eea" Offset="0"/>
                    <GradientStop Color="#764ba2" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo & TÃ­tulo -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="cloverwin.png" 
                           Width="40" 
                           Height="40" 
                           Margin="0,0,12,0" 
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="CloverBridge" 
                                  FontSize="22" 
                                  FontWeight="Bold"
                                  Foreground="White"/>
                        <TextBlock x:Name="VersionTextBlock"
                                  FontSize="11"
                                  Foreground="#94a3b8"
                                  Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Estado de ConexiÃ³n -->
                <Border Grid.Column="1" 
                       Background="#1e293b"
                       CornerRadius="20"
                       Padding="15,8"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse x:Name="ConnectionStatusDot" Width="12" Height="12" Margin="0,0,10,0"/>
                        <TextBlock x:Name="ConnectionStatusText" 
                                  Text="Desconectado" 
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Foreground="White"/>
                    </StackPanel>
                </Border>

                <!-- Botones AcciÃ³n RÃ¡pida -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="ConnectButton" 
                           Content="ðŸ”Œ Conectar" 
                           Style="{StaticResource SuccessButton}"
                           Margin="5,0"
                           Width="120"
                           Click="ConnectButton_Click"/>
                    <Button x:Name="DisconnectButton" 
                           Content="âš ï¸ Desconectar" 
                           Style="{StaticResource DangerButton}"
                           Margin="5,0"
                           Width="140"
                           IsEnabled="False"
                           Click="DisconnectButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- MÃ©tricas Dashboard -->
        <Grid Grid.Row="1" Margin="8,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Pagos -->
            <Border Grid.Column="0" Style="{StaticResource MetricCard}">
                <StackPanel>
                    <TextBlock Text="ðŸ’³ PAGOS" 
                              FontSize="11" 
                              Foreground="#94a3b8"
                              FontWeight="SemiBold"
                              Margin="0,0,0,5"/>
                    <TextBlock x:Name="TotalPaymentsText" 
                              Text="0" 
                              FontSize="28" 
                              FontWeight="Bold"
                              Foreground="#10b981"/>
                    <TextBlock x:Name="TotalPaymentsAmountText" 
                              Text="$0.00" 
                              FontSize="12" 
                              Foreground="#64748b"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Total Devoluciones -->
            <Border Grid.Column="1" Style="{StaticResource MetricCard}">
                <StackPanel>
                    <TextBlock Text="â†©ï¸ DEVOLUCIONES" 
                              FontSize="11" 
                              Foreground="#94a3b8"
                              FontWeight="SemiBold"
                              Margin="0,0,0,5"/>
                    <TextBlock x:Name="TotalRefundsText" 
                              Text="0" 
                              FontSize="28" 
                              FontWeight="Bold"
                              Foreground="#f59e0b"/>
                    <TextBlock x:Name="TotalRefundsAmountText" 
                              Text="$0.00" 
                              FontSize="12" 
                              Foreground="#64748b"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Total Errores -->
            <Border Grid.Column="2" Style="{StaticResource MetricCard}">
                <StackPanel>
                    <TextBlock Text="âŒ ERRORES" 
                              FontSize="11" 
                              Foreground="#94a3b8"
                              FontWeight="SemiBold"
                              Margin="0,0,0,5"/>
                    <TextBlock x:Name="TotalErrorsText" 
                              Text="0" 
                              FontSize="28" 
                              FontWeight="Bold"
                              Foreground="#ef4444"/>
                    <TextBlock Text="Transacciones fallidas" 
                              FontSize="12" 
                              Foreground="#64748b"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Uptime -->
            <Border Grid.Column="3" Style="{StaticResource MetricCard}">
                <StackPanel>
                    <TextBlock Text="â±ï¸ UPTIME" 
                              FontSize="11" 
                              Foreground="#94a3b8"
                              FontWeight="SemiBold"
                              Margin="0,0,0,5"/>
                    <TextBlock x:Name="UptimeText" 
                              Text="00:00:00" 
                              FontSize="28" 
                              FontWeight="Bold"
                              Foreground="#667eea"/>
                    <TextBlock Text="Tiempo activo" 
                              FontSize="12" 
                              Foreground="#64748b"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Estado Pairing -->
            <Border Grid.Column="4" Style="{StaticResource MetricCard}">
                <StackPanel>
                    <TextBlock Text="ðŸ” PAIRING" 
                              FontSize="11" 
                              Foreground="#94a3b8"
                              FontWeight="SemiBold"
                              Margin="0,0,0,5"/>
                    <StackPanel Orientation="Vertical" Margin="0,8,0,0">
                        <Button x:Name="PairingButton" 
                               Content="ðŸ”‘ Integrar" 
                               Style="{StaticResource SuccessButton}"
                               Margin="0,2"
                               Padding="10,6"
                               FontSize="11"
                               Click="PairingButton_Click"/>
                        <Button x:Name="UnpairButton" 
                               Content="ðŸ”“ Desintegrar" 
                               Style="{StaticResource WarningButton}"
                               Margin="0,2"
                               Padding="10,6"
                               FontSize="11"
                               IsEnabled="False"
                               Click="UnpairButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Contenido Principal -->
        <TabControl Grid.Row="2" 
                   Background="Transparent"
                   BorderThickness="0"
                   Margin="10">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Background" Value="#1e293b"/>
                    <Setter Property="Foreground" Value="#94a3b8"/>
                    <Setter Property="Padding" Value="20,10"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border x:Name="Border"
                                       Background="{TemplateBinding Background}"
                                       BorderThickness="0,0,0,3"
                                       BorderBrush="Transparent"
                                       Margin="2,0">
                                    <ContentPresenter ContentSource="Header"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Margin="{TemplateBinding Padding}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#667eea"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#334155"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- Tab: Registro de Transacciones -->
            <TabItem Header="ðŸ“Š Transacciones">
                <Border Style="{StaticResource GlassCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Filtros -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <ComboBox x:Name="TransactionFilterCombo"
                                     Width="150"
                                     Padding="10,8"
                                     Background="White"
                                     Foreground="#1e293b"
                                     BorderBrush="#cbd5e1"
                                     BorderThickness="1"
                                     FontSize="13"
                                     FontWeight="SemiBold"
                                     SelectedIndex="0"
                                     SelectionChanged="TransactionFilter_Changed">
                                <ComboBoxItem Content="Todas" Foreground="#1e293b"/>
                                <ComboBoxItem Content="Pagos" Foreground="#1e293b"/>
                                <ComboBoxItem Content="Devoluciones" Foreground="#1e293b"/>
                                <ComboBoxItem Content="Errores" Foreground="#1e293b"/>
                            </ComboBox>
                            
                            <Button Content="ðŸ”„ Actualizar" 
                                   Style="{StaticResource PrimaryButton}"
                                   Margin="10,0"
                                   Padding="15,8"
                                   Click="RefreshTransactions_Click"/>
                            
                            <Button Content="ðŸ—‘ï¸ Limpiar Historial" 
                                   Style="{StaticResource DangerButton}"
                                   Margin="5,0"
                                   Padding="15,8"
                                   Click="ClearHistory_Click"/>
                        </StackPanel>

                        <!-- Tabla de Transacciones -->
                        <DataGrid x:Name="TransactionsDataGrid"
                                 Grid.Row="1"
                                 AutoGenerateColumns="False"
                                 IsReadOnly="True"
                                 Background="#1e293b"
                                 Foreground="#e2e8f0"
                                 BorderThickness="0"
                                 GridLinesVisibility="Horizontal"
                                 HorizontalGridLinesBrush="#334155"
                                 RowBackground="#1e293b"
                                 AlternatingRowBackground="#1a2332"
                                 CanUserResizeRows="False"
                                 CanUserReorderColumns="False"
                                 SelectionMode="Single"
                                 HeadersVisibility="Column">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#0f172a"/>
                                    <Setter Property="Foreground" Value="#94a3b8"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Padding" Value="10"/>
                                    <Setter Property="BorderBrush" Value="#334155"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="â° Fecha/Hora" Binding="{Binding Timestamp}" Width="140"/>
                                <DataGridTextColumn Header="ðŸ”– Tipo" Binding="{Binding Type}" Width="100"/>
                                <DataGridTextColumn Header="ðŸ’µ Monto" Binding="{Binding Amount}" Width="100"/>
                                <DataGridTextColumn Header="ðŸ†” ID" Binding="{Binding TransactionId}" Width="120"/>
                                <DataGridTextColumn Header="ðŸ“Š Estado" Binding="{Binding Status}" Width="100"/>
                                <DataGridTextColumn Header="ðŸ’¬ Mensaje" Binding="{Binding Message}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </TabItem>

            <!-- Tab: Testing -->
            <TabItem Header="ðŸ§ª Testing">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Border Style="{StaticResource GlassCard}" Margin="12">
                        <StackPanel VerticalAlignment="Top" MaxWidth="600">
                            <TextBlock Text="ðŸ’³ Nueva Venta de Prueba" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      Foreground="#10b981"
                                      Margin="0,0,0,12"/>
                            
                            <!-- InformaciÃ³n de Factura -->
                            <TextBlock Text="ðŸ“„ InformaciÃ³n de Factura" 
                                      FontSize="13"
                                      FontWeight="SemiBold"
                                      Foreground="#667eea"
                                      Margin="0,0,0,10"/>
                            
                            <TextBlock Text="Nro. de Factura:" Foreground="#94a3b8" Margin="0,0,0,4"/>
                            <TextBox x:Name="InvoiceNumberTextBox"                                     Text="FB-12345-12345678"                                    Style="{StaticResource ModernTextBox}"
                                    FontSize="13"
                                    Padding="10,8"
                                    Margin="0,0,0,12"/>

                            <TextBlock Text="ID Externo:" Foreground="#94a3b8" Margin="0,0,0,4"/>
                            <TextBox x:Name="ExternalIdTextBox" 
                                    Style="{StaticResource ModernTextBox}"
                                    Text="TEST-001"
                                    FontSize="13"
                                    Padding="10,8"
                                    Margin="0,0,0,15"/>

                            <!-- Detalles de Productos -->
                            <TextBlock Text="ðŸ“¦ Detalles de Productos" 
                                      FontSize="13"
                                      FontWeight="SemiBold"
                                      Foreground="#667eea"
                                      Margin="0,0,0,10"/>

                            <!-- Producto 1 -->
                            <Border Background="#1e293b" CornerRadius="6" Padding="12" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="Producto 1:" Foreground="#10b981" FontWeight="SemiBold"/>
                                    <TextBlock Text="Nombre:" Foreground="#94a3b8" Margin="0,8,0,2" FontSize="12"/>
                                    <TextBox x:Name="Product1NameTextBox" 
                                            Style="{StaticResource ModernTextBox}"
                                            Text="Producto Test 1"
                                            FontSize="12"
                                            Padding="8,6"
                                            Margin="0,0,0,8"/>
                                    
                                    <TextBlock Text="Cantidad:" Foreground="#94a3b8" Margin="0,0,0,2" FontSize="12"/>
                                    <TextBox x:Name="Product1QtyTextBox" 
                                            Style="{StaticResource ModernTextBox}"
                                            Text="1"
                                            FontSize="12"
                                            Padding="8,6"
                                            Margin="0,0,0,8"/>
                                    
                                    <TextBlock Text="Precio Unitario ($):" Foreground="#94a3b8" Margin="0,0,0,2" FontSize="12"/>
                                    <TextBox x:Name="Product1PriceTextBox" 
                                            Style="{StaticResource ModernTextBox}"
                                            Text="25,00"
                                            FontSize="12"
                                            Padding="8,6"/>
                                </StackPanel>
                            </Border>

                            <!-- Producto 2 -->
                            <Border Background="#1e293b" CornerRadius="6" Padding="12" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="Producto 2:" Foreground="#10b981" FontWeight="SemiBold"/>
                                    <TextBlock Text="Nombre:" Foreground="#94a3b8" Margin="0,8,0,2" FontSize="12"/>
                                    <TextBox x:Name="Product2NameTextBox" 
                                            Style="{StaticResource ModernTextBox}"
                                            Text="Producto Test 2"
                                            FontSize="12"
                                            Padding="8,6"
                                            Margin="0,0,0,8"/>
                                    
                                    <TextBlock Text="Cantidad:" Foreground="#94a3b8" Margin="0,0,0,2" FontSize="12"/>
                                    <TextBox x:Name="Product2QtyTextBox" 
                                            Style="{StaticResource ModernTextBox}"
                                            Text="1"
                                            FontSize="12"
                                            Padding="8,6"
                                            Margin="0,0,0,8"/>
                                    
                                    <TextBlock Text="Precio Unitario ($):" Foreground="#94a3b8" Margin="0,0,0,2" FontSize="12"/>
                                    <TextBox x:Name="Product2PriceTextBox" 
                                            Style="{StaticResource ModernTextBox}"
                                            Text="25,00"
                                            FontSize="12"
                                            Padding="8,6"/>
                                </StackPanel>
                            </Border>

                            <!-- Resumen -->
                            <Border Background="#1e293b" CornerRadius="6" Padding="12" Margin="0,15,0,15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="ðŸ’° Resumen de Venta" FontSize="13" FontWeight="SemiBold" Foreground="#667eea" Margin="0,0,0,8"/>
                                        
                                        <!-- Desglose de productos -->
                                        <StackPanel Margin="0,0,0,10">
                                            <TextBlock Text="Desglose:" Foreground="#94a3b8" FontSize="11" Margin="0,0,0,4"/>
                                            <TextBlock x:Name="Product1SummaryTextBlock" 
                                                      Text="Producto 1: 1 Ã— $25.00 = $25.00" 
                                                      FontSize="11" 
                                                      Foreground="#e2e8f0"
                                                      Margin="0,0,0,3"/>
                                            <TextBlock x:Name="Product2SummaryTextBlock" 
                                                      Text="Producto 2: 1 Ã— $25.00 = $25.00" 
                                                      FontSize="11" 
                                                      Foreground="#e2e8f0"
                                                      Margin="0,0,0,8"/>
                                            <Separator Foreground="#334155" Margin="0,0,0,8"/>
                                        </StackPanel>

                                        <TextBlock x:Name="TotalAmountTextBlock" 
                                                  Text="Total: $50.00" 
                                                  FontSize="18" 
                                                  FontWeight="Bold"
                                                  Foreground="#10b981"
                                                  Margin="0,0,0,0"/>
                                    </StackPanel>

                                    <Button Grid.Column="1"
                                           Content="ðŸ”„ Recalc."
                                           Style="{StaticResource PrimaryButton}"
                                           Padding="12,8"
                                           FontSize="12"
                                           Click="RecalculateTotal_Click"
                                           VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <Button Content="âœ… Enviar Venta de Prueba"
                                   Style="{StaticResource SuccessButton}"
                                   Height="50"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Click="SendSaleButton_Click"
                                   Margin="0,0,0,10"/>
                            
                            <TextBlock Text="â„¹ï¸ Esto enviarÃ¡ una transacciÃ³n con 2 productos de $25 c/u (Total $50) creando archivos de seguimiento en INBOX/OUTBOX." 
                                      Foreground="#64748b"
                                      Margin="0,0,0,0"
                                      FontSize="11"
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </ScrollViewer>
            </TabItem>

            <!-- TAB: GestiÃ³n de OUTBOX -->
            <TabItem Header="ðŸ“ GestiÃ³n OUTBOX">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Border Background="#0f172a" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Transacciones Pendientes de AprobaciÃ³n" 
                                      FontSize="16" 
                                      FontWeight="Bold" 
                                      Foreground="#e2e8f0"
                                      Margin="0,0,0,15"/>

                            <TextBlock Text="Archivos en OUTBOX:" Foreground="#94a3b8" FontSize="12" Margin="0,0,0,8"/>
                            <ListBox x:Name="OutboxFileListBox" 
                                    Background="#1e293b" 
                                    BorderBrush="#334155" 
                                    Foreground="#e2e8f0"
                                    MaxHeight="200"
                                    SelectionChanged="OutboxFileListBox_SelectionChanged"
                                    Margin="0,0,0,10">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" Foreground="#e2e8f0" FontSize="11"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <Button Content="ðŸ”„ Actualizar Lista" 
                                   Click="RefreshOutboxButton_Click"
                                   Background="#667eea"
                                   Foreground="White"
                                   Padding="10,8"
                                   FontSize="12"
                                   Cursor="Hand"
                                   Margin="0,0,0,15"/>

                            <Separator Foreground="#334155" Margin="0,10"/>

                            <TextBlock Text="Detalles de TransacciÃ³n:" 
                                      Foreground="#94a3b8" 
                                      FontSize="12"
                                      Margin="0,15,0,8"/>
                            <TextBox x:Name="OutboxDetailsTextBox" 
                                    Background="#1e293b" 
                                    BorderBrush="#334155" 
                                    Foreground="#e2e8f0"
                                    IsReadOnly="True"
                                    AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Auto"
                                    Height="250"
                                    Padding="10,8"
                                    FontFamily="Consolas"
                                    FontSize="10"
                                    Margin="0,0,0,15"/>

                            <Separator Foreground="#334155" Margin="0,10"/>

                            <TextBlock Text="Acciones:" Foreground="#94a3b8" FontSize="12" Margin="0,15,0,8"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <Button Content="âœ… Aprobar" 
                                       Click="ApproveTransactionButton_Click"
                                       Background="#10b981"
                                       Foreground="White"
                                       Padding="15,8"
                                       FontSize="12"
                                       Cursor="Hand"
                                       Margin="0,0,10,0"/>
                                <Button Content="âŒ Rechazar" 
                                       Click="RejectTransactionButton_Click"
                                       Background="#ef4444"
                                       Foreground="White"
                                       Padding="15,8"
                                       FontSize="12"
                                       Cursor="Hand"
                                       Margin="0,0,10,0"/>
                                <Button Content="ðŸ“ Archivar" 
                                       Click="ArchiveTransactionButton_Click"
                                       Background="#8b5cf6"
                                       Foreground="White"
                                       Padding="15,8"
                                       FontSize="12"
                                       Cursor="Hand"/>
