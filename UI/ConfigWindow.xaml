<Window x:Class="CloverBridge.UI.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CloverBridge - Configuración"
        Height="750"
        Width="550"
        WindowStartupLocation="CenterOwner"
        Background="#0f172a"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1e293b"/>
            <Setter Property="Foreground" Value="#f8fafc"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#6366f1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style for high contrast -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#111827"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#6366f1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#111827"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#374151"/>
                </Trigger>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#6366f1"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#6366f1"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#6366f1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="BtnBorder" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BtnBorder" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#334155"/>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title -->
            <RowDefinition Height="Auto"/> <!-- Provider Selector -->
            <RowDefinition Height="*"/>    <!-- Tabs -->
            <RowDefinition Height="Auto"/> <!-- Footer Actions -->
        </Grid.RowDefinitions>

        <TextBlock Text="CONFIGURACIÓN DEL SISTEMA" Foreground="#6366f1" FontWeight="Bold" FontSize="20" Margin="0,0,0,20"/>

        <!-- Main Provider -->
        <Border Grid.Row="1" Background="#1e293b" CornerRadius="10" Padding="15" Margin="0,0,0,20" BorderBrush="#334155" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="PROVEEDOR PREDETERMINADO" Foreground="#94a3b8" FontSize="11" FontWeight="Bold" Margin="0,0,0,10"/>
                <ComboBox x:Name="DefaultProviderComboBox" Height="45" FontSize="14" VerticalContentAlignment="Center">
                    <ComboBoxItem Content="CLOVER"/>
                    <ComboBoxItem Content="MERCADO PAGO (QRMP)"/>
                </ComboBox>
                <TextBlock Text="* Selector de alta visibilidad: Fondo oscuro con texto blanco." Foreground="#64748b" FontSize="10" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <TabControl Grid.Row="2" Background="Transparent" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Header" Value="{Binding Header}"/>
                    <Setter Property="Foreground" Value="#94a3b8"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border x:Name="Border" Padding="25,12" BorderThickness="0,0,0,3" Margin="0,0,15,0">
                                    <ContentPresenter ContentSource="Header" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#6366f1"/>
                                        <Setter Property="Foreground" Value="#e2e8f0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- TAB CLOVER -->
            <TabItem Header="CLOVER">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,15,0,0">
                    <StackPanel Margin="0,0,15,0">
                        <CheckBox x:Name="CloverEnabledCheckBox" Content="Habilitar Integración Clover" Foreground="#10b981" FontWeight="Bold" Margin="0,0,0,20" IsChecked="True" FontSize="14"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Servidor Clover (IP):" Foreground="#94a3b8" Margin="0,0,0,5"/>
                                <TextBox x:Name="HostTextBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Puerto:" Foreground="#94a3b8" Margin="0,0,0,5"/>
                                <TextBox x:Name="PortTextBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>
                            </StackPanel>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Remote App ID:" Foreground="#94a3b8" Margin="0,0,0,5"/>
                                <TextBox x:Name="MerchantIdTextBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Device ID (SN):" Foreground="#94a3b8" Margin="0,0,0,5"/>
                                <TextBox x:Name="DeviceIdTextBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Authentication Token:" Foreground="#94a3b8" Margin="0,0,0,5"/>
                        <TextBox x:Name="TokenTextBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>

                        <CheckBox x:Name="SecureCheckBox" Content="Usar Conexión Segura (WSS / SSL)" Foreground="#e2e8f0" Margin="0,5,0,20"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- TAB MERCADO PAGO -->
            <TabItem Header="MERCADO PAGO">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,15,0,0">
                    <StackPanel Margin="0,0,15,0">
                        <CheckBox x:Name="MpEnabledCheckBox" Content="Habilitar Integración Mercado Pago" Foreground="#10b981" FontWeight="Bold" Margin="0,0,0,20" IsChecked="True" FontSize="14"/>

                        <TextBlock Text="Access Token (Bearer):" Foreground="#94a3b8" Margin="0,0,0,5"/>
                        <TextBox x:Name="MpTokenTextBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>

                        <TextBlock Text="User ID (Collector ID):" Foreground="#94a3b8" Margin="0,0,0,5"/>
                        <TextBox x:Name="MpUserIdTextBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="ID Sucursal (External):" Foreground="#94a3b8" Margin="0,0,0,5"/>
                                <TextBox x:Name="MpStoreIdTextBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="ID Caja (POS):" Foreground="#94a3b8" Margin="0,0,0,5"/>
                                <TextBox x:Name="MpPosIdTextBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Webhook URL (Notificaciones):" Foreground="#94a3b8" Margin="0,0,0,5"/>
                        <TextBox x:Name="MpWebhookUrlTextBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>

                        <TextBlock Text="Webhook Secret (Opcional):" Foreground="#94a3b8" Margin="0,0,0,5"/>
                        <TextBox x:Name="MpWebhookSecretTextBox" Style="{StaticResource ModernTextBox}" Margin="0,0,0,20"/>

                        <Button Content="⚡ PROBAR CONEXIÓN API" Style="{StaticResource SecondaryButton}" Height="45" Click="TestMp_Click" Margin="0,0,0,20"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Footer Buttons -->
        <Grid Grid.Row="3" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="GUARDAR CAMBIOS" Style="{StaticResource PrimaryButton}" Click="SaveButton_Click"/>
            <Button Grid.Column="2" Content="CANCELAR" Style="{StaticResource SecondaryButton}" Click="CancelButton_Click"/>
        </Grid>
    </Grid>
</Window>
